<Window x:Class="GTManute.Views.Lançamento.View_Abast"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GTManute.Views.Lançamento"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="None"  AllowsTransparency="True"
        Title="View_Abast" Height="500" Width="800" Background="Transparent">
    <Grid>
        <Rectangle Margin="10" RadiusY="10" RadiusX="10" Fill="{StaticResource primeiraCor}" />
        <Rectangle Fill="{DynamicResource TerceiraCor}" StrokeThickness="0" HorizontalAlignment="Right" Height="30" Stroke="Black" VerticalAlignment="Top" Width="30" RadiusX="5" RadiusY="5" Margin="0,0,0,0"/>
        <TextBlock x:Name="btn_Fechar" HorizontalAlignment="Right" Height="30" TextWrapping="Wrap" Text="x" VerticalAlignment="Top" Width="28" FontSize="20" TextAlignment="Center" FontWeight="Bold"  Margin="0,0,0,0"/>
        <Rectangle Fill="{StaticResource SegundaCor}" HorizontalAlignment="Left" Height="41" 
            VerticalAlignment="Top" Width="7.332" Margin="10.47,21.216,0,0"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="23,14,0,0"
            TextWrapping="Wrap" Text="Lançamento de abastecimento" VerticalAlignment="Top" Width="537"
            Foreground="{StaticResource SegundaCor}" FontSize="36" FontWeight="Bold" LineHeight="11"/>
        <Grid Margin="35,70,35,0" Height="30" VerticalAlignment="Top">
            <Rectangle Margin="0" Fill="{StaticResource SegundaCor}" RadiusY="10" RadiusX="10"/>
            <Image   Height="30" Width="30" HorizontalAlignment="Left" Margin="10,0,0,0" />
            <TextBox Margin="40,2,100,2" />
            <TextBlock Text="Buscar" HorizontalAlignment="Right" Width="95" VerticalAlignment="Center"
                       TextAlignment="Center" Foreground="{StaticResource primeiraCor}" FontWeight="Bold" FontSize="20" Height="30"/>
        </Grid>
        <Grid Margin="35,105,35,65" >
            <Rectangle Fill="{StaticResource SegundaCor}" StrokeThickness="5" RadiusY="10" RadiusX="10" />
            <Grid Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="5" Grid.Row="0" Background="{StaticResource primeiraCor}">
                    
                </StackPanel>
            </Grid>
        </Grid>

    </Grid>
</Window>
